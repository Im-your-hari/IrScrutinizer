<?xml version="1.0" encoding="US-ASCII"?>
<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2
                              http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>bin</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>

    <fileSets>
        <fileSet>
            <outputDirectory/>
            <includes>
                <include>*.txt</include>
            </includes>
            <lineEnding>keep</lineEnding> <!-- see CONTRIBUTE.md for rationale -->
        </fileSet>
        <fileSet>
            <directory>target</directory>
            <outputDirectory/>
            <includes>
                <include>*jar-with-dependencies.jar</include>
                <include>*.ini</include>
                <include>contributed/*</include>
                <include>contributed/*/*</include>
                <include>exportformats.d/*</include>
                <include>girr.xml</include>
                <include>irscrutinizer.appdata.xml</include>
                <include>IrpProtocols.xml</include>
                <include>*.desktop</include>
                <include>*.sh</include>
                <include>*.bat</include>
            </includes>
            <lineEnding>keep</lineEnding>
        </fileSet>
        <fileSet>
            <directory>${basedir}/native</directory>
            <outputDirectory/>
            <includes>
                <include>*/*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>src/main/doc</directory>
            <outputDirectory>doc</outputDirectory>
            <excludes>
                <exclude>pre_install.txt</exclude>  <!-- setup.exe only -->
                <exclude>post_install.txt</exclude> <!-- setup.exe only -->
            </excludes>
            <lineEnding>keep</lineEnding>
        </fileSet>
        <fileSet>
            <directory>target/maven-shared-archive-resources</directory>
            <outputDirectory/>
            <includes>
                <include>*.xsl</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>target/generated-documents</directory>
            <outputDirectory>doc</outputDirectory>
            <includes>
                <include>*.html</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>target/maven-shared-archive-resources</directory>
            <outputDirectory>doc</outputDirectory>
            <includes>
                <include>IrpTransmogrifier.xml</include>
                <include>IrpScrutinizer.xml</include>
                <include>Girr.xml</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>target</directory>
            <outputDirectory>schemas</outputDirectory>
            <includes>
                <include>*.xsd</include>
            </includes>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>${basedir}/src/main/resources/icons/Crystal-Clear/64x64/apps/babelfish.png</source>
            <outputDirectory/>
            <destName>irscrutinizer.png</destName>
        </file>
        <file>
            <source>${basedir}/target/doc/IrpProtocols.html</source>
            <outputDirectory>doc</outputDirectory>
        </file>
        <!-- TODO: IrpTransmogrifier.html -->
    </files>
</assembly>
